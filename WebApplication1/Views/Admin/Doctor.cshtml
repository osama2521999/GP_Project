
@{
    @model IEnumerable<WebApplication1.Models.Doctor>
    ViewBag.Title = "Doctor";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<head>


    <!-- Style -->
    <link rel="stylesheet" href="~/Content/Doctors_css/css/style.css">

    <link href="~/Content/Doctors_css/Search/css/main.css" rel="stylesheet" />

</head>
<body>

    <div class="s130">
        <form>
            <div class="inner-form">
                <div class="input-field first-wrap">
                    <div class="svg-wrapper">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
                            <path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"></path>
                        </svg>
                    </div>
                    <input id="search" type="text" placeholder="Who's Doctor you want ?" />
                </div>
                <div class="input-field second-wrap">
                    <button class="btn-search" type="button">SEARCH</button>
                </div>
            </div>
        </form>
    </div>


    <div class="content">

        <div class="container">


            <div class="table-responsive">
                <form method="get" action="@Url.Action("AddDoctor", "Admin")">
                    <div class="form-actions no-color">
                        <input type="submit" value="Add Doctor" class="btn btn-danger" />
                    </div>
                </form>
                
                <table class="table table-striped custom-table">
                    <thead>
                        <tr>
                            @*<th scope="col">

                    </th>*@
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Required Langunge</th>
                            <th scope="col">Required Technology</th>
                            <th scope="col">Max Team</th>
                            <th scope="col">Section</th>
                            <th scope="col">Last Login</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr scope="row">

                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    null
                                </td>
                                <td>
                                    null
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Max_team)
                                </td>
                                <td>
                                    null
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Last_login)
                                </td>
                                <td>
                                    @*<a href="@Url.Action("Delete","Admin", new { id = item.Doctor_id })">Delete</a>*@
                                    <form method="get" action="@Url.Action("Delete","Admin", new { id = item.Doctor_id })">
                                        <div class="form-actions no-color">
                                            <input type="submit" value="Delete" class="btn btn-danger" />
                                        </div>
                                    </form>

                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>


        </div>

    </div>



    <script src="~/Content/Doctors_css/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/Doctors_css/js/popper.min.js"></script>
    <script src="~/Content/Doctors_css/js/bootstrap.min.js"></script>
    <script src="~/Content/Doctors_css/js/main.js"></script>
</body>


